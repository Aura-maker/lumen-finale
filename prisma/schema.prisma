generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODELLI PER IMPARAFACILE

model Subject {
  id          String @id @default(cuid())
  name        String
  icon        String
  color       String
  description String
  topics      Topic[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Topic {
  id          String @id @default(cuid())
  title       String
  description String
  year        String
  subject     Subject @relation(fields: [subjectId], references: [id])
  subjectId   String
  subtopics   Subtopic[]
  quizzes     Quiz[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Subtopic {
  id          String @id @default(cuid())
  title       String
  summary     String
  content     String
  topic       Topic @relation(fields: [topicId], references: [id])
  topicId     String
  flashcards  Flashcard[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Quiz {
  id          String @id @default(cuid())
  question    String
  options     String // JSON string
  correctAnswer Int
  explanation String
  difficulty  String
  topic       Topic @relation(fields: [topicId], references: [id])
  topicId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Flashcard {
  id          String @id @default(cuid())
  front       String
  back        String
  subtopic    Subtopic @relation(fields: [subtopicId], references: [id])
  subtopicId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id          String @id @default(cuid())
  username    String @unique
  email       String @unique
  password    String
  xp          Int @default(0)
  level       Int @default(1)
  streak      Int @default(0)
  badges      Badge[]
  progress    Progress[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Badge {
  id          String @id @default(cuid())
  name        String
  description String
  icon        String
  users       User[]
  createdAt   DateTime @default(now())
}

model Progress {
  id          String @id @default(cuid())
  user        User @relation(fields: [userId], references: [id])
  userId      String
  subjectId   String
  topicId     String
  score       Int
  timeSpent   Int
  completed   Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Simulation {
  id          String @id @default(cuid())
  title       String
  description String
  subject     String
  difficulty  String
  questions   String // JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
